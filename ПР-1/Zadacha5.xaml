        xmlns:local="clr-namespace:ПР_1"
        mc:Ignorable="d"
        Title="Zadacha5" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb_a" HorizontalAlignment="Left" Height="23" Margin="37,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="tb_b" HorizontalAlignment="Left" Height="23" Margin="157,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
        <DataGrid x:Name="data_one_mas" HorizontalAlignment="Left" Height="180" Margin="37,152,0,0" VerticalAlignment="Top" Width="225"/>
        <DataGrid x:Name="data_two_mas" HorizontalAlignment="Left" Height="180" Margin="281,153,0,0" VerticalAlignment="Top" Width="225"/>
        <DataGrid x:Name="data_three_mas" HorizontalAlignment="Left" Height="180" Margin="522,152,0,0" VerticalAlignment="Top" Width="227"/>
        <Button x:Name="bt_vp" Content="Выполнить" HorizontalAlignment="Left" Margin="281,105,0,0" VerticalAlignment="Top" Width="105" Height="32" Click="bt_vp_Click"/>
        <Label Content="Значение N" HorizontalAlignment="Left" Margin="37,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.997,0.815"/>
        <Label Content="Значение M" HorizontalAlignment="Left" Margin="157,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.997,0.815"/>
        <GroupBox Header="Задание №5" HorizontalAlignment="Left" Height="78" Margin="10,10,0,0" VerticalAlignment="Top" Width="772"/>
